<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item><!--CustomEditText-->
    </style>
    <style name="toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/blue3</item>
    </style>
    <style name="TextViewFragmentStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ButtonFurther">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/btn</item>
        <item name="android:text">@string/further</item>
    </style>
    <style name="line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="viewClick">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="imageViewChevron">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:src">@drawable/ic_chevron_right_black_24dp</item>
        <item name="android:contentDescription">@string/chevron_right</item>
    </style>
    <style name="text_view_h1">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ukrainian_free_set</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="text_view_h2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ukrainian_free_set</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="text_view_h3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ukrainian_free_set</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--CustomEditText-->
    <style name="AppTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/line</item>
    </style>
    <style name="edit_text_group_coefficients">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">@string/default_coefficient</item>
    </style>
</resources>
